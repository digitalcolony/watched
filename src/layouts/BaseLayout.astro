---
import "../styles/global.css";

interface Props {
	title?: string;
}

const { title = "Watched Reviews" } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg?v=2" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<footer class="site-footer panel">
			<p>
				Site by Michael Allen Smith. Code is freely available on
				<a href="https://github.com/digitalcolony/watched" target="_blank" rel="noreferrer"
					>GitHub</a
				>
			</p>
		</footer>

		<script>
			const root = document.documentElement;
			const storageKey = "watched-theme";

			const getPreferredTheme = () => {
				const saved = localStorage.getItem(storageKey);
				if (saved === "light" || saved === "dark") return saved;
				return window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
			};

			const initial = getPreferredTheme();
			root.setAttribute("data-theme", initial);
		</script>
	</body>
</html>
